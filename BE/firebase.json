{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001,
      "host": "0.0.0.0"
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": "8080"
    },
    "ui": {
      "enabled": true,
      "port": 8000,
      "host": "0.0.0.0"
    },
    "singleProjectMode": true
  }
}
